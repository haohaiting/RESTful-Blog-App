<%- include ("partials/header") %>

<div class="ui text container main segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" id="" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" id="" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="blog[body]">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui violet big basic button">
    </form>
</div>

<%- include ("partials/footer") %>